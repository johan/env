[alias]
        b = branch
        bb = branch -avv
        bd = branch -d
        bnuke = !git branch -d $1 ; git push --delete origin $1
        c = commit -am
        ce = commit -ae
        co = checkout
        d = diff
        f = fetch
        l = log
        lt = log --oneline --graph
        lf = log --name-status
        p = pull
        pp = push -u origin HEAD
        s = status -sb
[color]
        diff = auto
        status = auto
        branch = auto
        interactive = auto
        ui = auto
        pager = true
